<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="715.0"
            prefWidth="1200.0" styleClass="default-background" stylesheets="@../styles.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.uniks.stp24.controller.LicensesAndCreditsController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
            </padding>
            <HBox VBox.vgrow="ALWAYS">
                <VBox maxWidth="500.0">
                    <Label styleClass="large" text="%licenses">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <TextFlow maxWidth="300.0" prefWidth="300.0" VBox.vgrow="ALWAYS">
                        <Text fx:id="licensesText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="medium"
                              text="Text">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Text>
                    </TextFlow>
                    <styleClass>
                        <String fx:value="container"/>
                        <String fx:value="dark-container"/>
                    </styleClass>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="BOTTOM_CENTER" stylesheets="@../styles.css">
                    <VBox styleClass="round-image-container">
                        <ImageView fx:id="deadBirdsImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                    </VBox>
                    <Region prefHeight="120.0" prefWidth="200.0"/>
                    <Button cancelButton="true" mnemonicParsing="false" onAction="#backToLogin" styleClass="back-button"
                            text="%back">
                        <font>
                            <Font size="14.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox>
                    <Label styleClass="large" text="Credits">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <TextFlow maxWidth="300.0" prefWidth="300.0" VBox.vgrow="ALWAYS">
                        <Text fx:id="creditsText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="medium"
                              text="Text">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Text>
                    </TextFlow>
                    <styleClass>
                        <String fx:value="container"/>
                        <String fx:value="dark-container"/>
                    </styleClass>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
                <padding>
                    <Insets bottom="60.0" left="60.0" right="60.0" top="60.0"/>
                </padding>
            </HBox>
        </VBox>
    </center>
</BorderPane>
