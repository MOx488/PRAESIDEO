<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>
<fx:root alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
         spacing="8.0" stylesheets="@../../styles.css" type="HBox" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.players.PlayerComponent">
    <ImageView fx:id="playerFlag" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true"/>
    <Circle fx:id="playerColor" fill="DODGERBLUE" radius="8.0" stroke="WHITE" strokeType="INSIDE"/>
    <Label fx:id="playerName" styleClass="medium" text="player name"/>
</fx:root>
