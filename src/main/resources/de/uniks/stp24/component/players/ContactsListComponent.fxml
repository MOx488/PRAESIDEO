<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import java.lang.String?>
<fx:root fx:id="contactsBox" spacing="10.0" stylesheets="@../../styles.css" type="HBox"
         xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.players.ContactsListComponent">
    <styleClass>
        <String fx:value="container"/>
        <String fx:value="hBox-contactsBox"/>
        <String fx:value="light-container"/>
    </styleClass>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <StackPane HBox.hgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <ImageView fx:id="contactFlag" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true"/>
            <Circle fx:id="contactColor" fill="DODGERBLUE" radius="8.0" stroke="WHITE" strokeType="INSIDE"/>
            <Label fx:id="contactName" styleClass="small-large" text="Label"/>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <Label fx:id="contactAveragePower" alignment="CENTER" styleClass="small-large" text="Label"
                   textAlignment="CENTER"/>
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <ImageView fx:id="contactWarStatus" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true"
                       preserveRatio="true"/>
        </HBox>
    </StackPane>
</fx:root>
