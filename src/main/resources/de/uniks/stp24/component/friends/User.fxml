<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<fx:root alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
         spacing="10.0" stylesheets="@../../styles.css" type="HBox" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.friends.UserComponent">
    <ImageView fx:id="userAvatar" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true"/>
    <Label fx:id="username" styleClass="medium" text="Label"/>
    <Region HBox.hgrow="ALWAYS"/>
    <ImageView fx:id="declineImageView" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#declineRequest"
               pickOnBounds="true" preserveRatio="true">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </ImageView>
    <ImageView fx:id="acceptImageView" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#acceptRequest"
               pickOnBounds="true" preserveRatio="true">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </ImageView>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</fx:root>
